{
  "builders": [
    {
      "disk_size": "30",
      "image_family": "centos-7",
      "image_name": "{{user `image`}}-{{user `git_tag`}}",
      "machine_type": "n1-highcpu-16",
      "project_id": "{{user `gcp_project_id`}}",
      "region": "{{user `gcp_region`}}",
      "source_image": "{{user `gcp_centos_image`}}",
      "ssh_username": "centos",
      "state_timeout": "20m",
      "type": "googlecompute",
      "zone": "{{user `gcp_zone`}}"
    },
    {
      "changes": [
        "WORKDIR /home/centos",
        "CMD [\"/bin/bash\"]",
        "ENTRYPOINT [\"\"]"
      ],
      "commit": true,
      "image": "{{user `base_image`}}",
      "run_command": [
        "-d", "-i", "-t", "--network=host", "--entrypoint=/bin/sh", "--", "{{.Image}}"
      ],
      "type": "docker"
    },
    {
      "boot_command": [
        "<tab> append initrd=initrd.img inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.cfg noipv6<enter><wait>"
      ],
      "cpus": 4,
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "kickstart",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "{{user `iso_url1`}}",
        "{{user `iso_url2`}}"
      ],
      "shutdown_command": "echo 'vagrant' | /usr/bin/sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `image`}}"
    },
    {
      "boot_command": [
        "<tab> append initrd=initrd.img inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.cfg noipv6<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": 4,
      "guest_os_type": "Centos-64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "{{user `iso_url1`}}",
        "{{user `iso_url2`}}"
      ],
      "output_directory": "output-vmware-iso",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `image`}}",
      "vmdk_name": "{{user `image`}}"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.cfg noipv6<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": 4,
      "guest_os_type": "Centos-64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "{{user `iso_url1`}}",
        "{{user `iso_url2`}}"
      ],
      "name": "vmware-ova",
      "output_directory": "output-vmware-ova",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `image`}}",
      "vmdk_name": "{{user `image`}}"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.cfg noipv6<enter><wait>"
      ],
      "boot_wait": "30s",
      "disk_size": "30720",
      "guest_os_type": "centos7",
      "http_directory": "kickstart",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "{{user `iso_url1`}}",
        "{{user `iso_url2`}}"
      ],
      "output_directory": "output-parallels-iso",
      "parallels_tools_flavor": "lin",
      "prlctl": [
        [
          "set",
          "{{.Name}}",
          "--memsize",
          "4096"
        ],
        [
          "set",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ],
      "prlctl_version_file": ".prlctl_version",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "parallels-iso",
      "vm_name": "{{user `image`}}"
    },
    {
      "azure_tags": {
        "product": "{{user `image`}}"
      },
      "client_id": "{{user `arm_client_id`}}",
      "client_secret": "{{user `arm_client_secret`}}",
      "image_offer": "CentOS",
      "image_publisher": "OpenLogic",
      "image_sku": "{{user `arm_image_sku`}}",
      "location": "{{user `arm_location`}}",
      "managed_image_name": "{{user `image`}}",
      "managed_image_resource_group_name": "{{user `arm_resource_group`}}",
      "os_type": "Linux",
      "os_disk_size_gb": "30",
      "subscription_id": "{{user `arm_subscription_id`}}",
      "tenant_id": "{{user `arm_tenant_id`}}",
      "type": "azure-arm",
      "vm_size": "Standard_D8_v3"
    }
  ],
  "post-processors": [[
    {
      "only": [
        "docker"
      ],
      "repository": "{{user `docker_registry`}}/{{user `image`}}",
      "tag": "{{user `git_tag`}}",
      "type": "docker-tag"
    },
    {
      "compression_level": 9,
      "keep_input_artifact": true,
      "only": [
        "vmware-iso",
        "virtualbox-iso"
      ],
      "output": "packer/{{user `image`}}.box",
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile.template"
    },
    {
      "inline": [
        "ovftool packer-vmware-ova/{{user `image`}}.vmx packer/{{user `image`}}.ova"
      ],
      "keep_input_artifact": true,
      "only": [
        "vmware-ova"
      ],
      "type": "shell-local"
    },
    {
      "access_token": "{{user `cloud_token`}}",
      "box_tag": "dockpack/{{user `image`}}",
      "only": [
        "parallels-iso",
        "vmware-iso",
        "virtualbox-iso"
      ],
      "type": "vagrant-cloud",
      "version": "{{user `version`}}"
    }
  ]],
  "provisioners": [
    {
      "inline": [
        "yum -y install sudo"
      ],
      "only": [
        "docker"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/ansible.sh"
      ],
      "type": "shell"
    },
    {
      "extra_arguments": [
        "--extra-vars \"image={{user `image`}}\"",
        "--extra-vars \"docker_conda={{user `docker_conda`}}\""
      ],
      "playbook_dir": "./ansible",
      "playbook_file": "ansible/packer.yml",
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} /usr/bin/sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh",
      "type": "shell"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "only": [
        "azure-arm"
      ],
      "type": "shell"
    }
  ],
  "push": {
    "name": "{{user `image`}}"
  },
  "variables": {
    "arm_client_id": "{{env `ARM_CLIENT_ID`}}",
    "arm_client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "arm_image_sku": "7.7",
    "arm_location": "{{env `ARM_LOCATION`}}",
    "arm_resource_group": "{{env `ARM_RESOURCE_GROUP`}}images",
    "arm_storage_account": "{{env `ARM_STORAGE_ACCOUNT`}}images",
    "arm_subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "arm_tenant_id": "{{env `ARM_TENANT_ID`}}",
    "base_image": "{{env `CENTOS7_BASE_IMAGE`}}",
    "gcp_centos_image": "{{env `GCP_CENTOS_IMAGE`}}",
    "gcp_project_id": "{{env `GCP_PROJECT_ID`}}",
    "gcp_region": "{{env `CLOUDSDK_COMPUTE_REGION`}}",
    "gcp_zone": "{{env `CLOUDSDK_COMPUTE_ZONE`}}",
    "git_tag": "{{env `GIT_TAG`}}",
    "iso_checksum": "9a2c47d97b9975452f7d582264e9fc16d108ed8252ac6816239a3b58cef5c53d",
    "iso_url1": "file:///Users/Shared/CentOS-7-x86_64-Minimal-1908.iso",
    "iso_url2": "https://buildlogs.centos.org/rolling/7/isos/x86_64/CentOS-7-x86_64-Minimal-1908.iso",
    "image": "centos7",
    "vagrantcloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "version": "7.7.{{ timestamp }}"
  }
}
